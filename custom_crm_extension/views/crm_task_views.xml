<odoo>
    <record id="view_crm_task_tree" model="ir.ui.view">
        <field name="name">crm.task.tree</field>
        <field name="model">crm.task</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="deadline"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="view_crm_task_form" model="ir.ui.view">
        <field name="name">crm.task.form</field>
        <field name="model">crm.task</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="deadline"/>
                        <field name="status"/>
                        <field name="lead_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
